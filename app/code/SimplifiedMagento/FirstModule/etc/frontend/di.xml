<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\Catalog\Api\ProductRepositoryInterface"
                type="SimplifiedMagento\FirstModule\Model\CustomImplementation" />
    <preference for="SimplifiedMagento\FirstModule\Api\PencilInterface"
                type="SimplifiedMagento\FirstModule\Model\Pencil" />
    <preference for="SimplifiedMagento\FirstModule\Api\Color"
                type="SimplifiedMagento\FirstModule\Model\Red" />
    <preference for="SimplifiedMagento\FirstModule\Api\Size"
                type="SimplifiedMagento\FirstModule\Model\Big" />
    <preference for="SimplifiedMagento\FirstModule\Api\Brightness"
                type="SimplifiedMagento\FirstModule\Model\High" />

    <type name="SimplifiedMagento\FirstModule\Controller\Page\HelloWorld">
        <plugin name="beforePluginName"
                type="SimplifiedMagento\FirstModule\Plugin\PluginSolution" disabled="true" />
        <plugin name="beforePlugin2Name"
                type="SimplifiedMagento\FirstModule\Plugin\PluginSolution2" disabled="true" />
        <plugin name="beforePlugin3Name"
                type="SimplifiedMagento\FirstModule\Plugin\PluginSolution3" disabled="true" />
        <arguments>
            <argument name="heavyService" xsi:type="object">
                SimplifiedMagento\FirstModule\Model\HeavyService\Proxy
            </argument>
        </arguments>
    </type>

    <virtualType name="virtualType" type="SimplifiedMagento\FirstModule\Model\Red">
        <arguments>
            <argument name="brightness" xsi:type="object">
                SimplifiedMagento\FirstModule\Model\Low
            </argument>
        </arguments>
    </virtualType>


    <type name="SimplifiedMagento\FirstModule\Model\Pencil">
        <arguments>
            <argument name="color" xsi:type="object">
                virtualType
            </argument>
            <argument name="size" xsi:type="object">
                SimplifiedMagento\FirstModule\Model\Small
            </argument>
        </arguments>
    </type>

    <type name="SimplifiedMagento\FirstModule\Model\Student">
        <arguments>
            <argument name="name" xsi:type="string">
                Kadia
            </argument>
            <argument name="age" xsi:type="number">
                40
            </argument>
            <argument name="scores" xsi:type="array">
                <item name="maths" xsi:type="number">90</item>
                <item name="science" xsi:type="number">100</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="hello_world" xsi:type="object">SimplifiedMagento\FirstModule\Console\Command\HelloWorld</item>
            </argument>
        </arguments>
    </type>
</config>